@model string
@using MyRestaurant.Utility
<div style="width:100%">
    @if (Model == StaticItems.StatusSubmitted)
    {
        <img src="~/images/OrderPlaced.png" width="100%" />
    }
    @if (Model == StaticItems.StatusInProcess)
    {
        <img src="~/images/InKitchen.png" width="100%" />
    }
    @if (Model == StaticItems.StatusReady)
    {
        <img src="~/images/ReadyForPickup.png" width="100%" />
    }
    @if (Model == StaticItems.StatusCompleted)
    {
        <img src="~/images/completed.png" width="100%" />
    }
</div>