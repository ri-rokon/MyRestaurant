@model IEnumerable<FoodItem>

@if(Model.Count()>0)
{
    <div class="col-12">
        <div class="row">
            <h3 class="text-success">@Model.FirstOrDefault().Category.Name</h3>
        </div>


        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px">
                <div class="row">

                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="50%" style="border-radius:5px; border:5px solid #bbb9b9" alt="Alternate Text" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:magenta">@item.Name</label>
                            </div>
                            <div class="col-4">

                            </div>
                        </div>
                    </div>

                </div>
            </div>

        }
    </div>
}